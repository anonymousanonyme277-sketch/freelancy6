<body>

<div class="container">
  <h2>My Account</h2>

  <input type="text" id="name" placeholder="Full Name">
  <input type="email" id="email" placeholder="Email">
  <input type="text" id="skills" placeholder="Skills (e.g. Web Design, Logo)">
  <textarea id="bio" placeholder="Short Bio"></textarea>

  <button onclick="saveData()">Save Information</button>

  <div class="profile" id="profileData" style="display:none;">
    <h3>Your Profile</h3>
    <p><strong>Name:</strong> <span id="pName"></span></p>
    <p><strong>Email:</strong> <span id="pEmail"></span></p>
    <p><strong>Skills:</strong> <span id="pSkills"></span></p>
    <p><strong>Bio:</strong> <span id="pBio"></span></p>
  </div>
</div>

<script>
function saveData(){
  const name = document.getElementById("name").value;
  const email = document.getElementById("email").value;
  const skills = document.getElementById("skills").value;
  const bio = document.getElementById("bio").value;

  const userData = {
    name:name,
    email:email,
    skills:skills,
    bio:bio
  };

  localStorage.setItem("freelancyUser", JSON.stringify(userData));
  showData();
}

function showData(){
  const data = JSON.parse(localStorage.getItem("freelancyUser"));
  if(data){
    document.getElementById("profileData").style.display="block";
    document.getElementById("pName").innerText=data.name;
    document.getElementById("pEmail").innerText=data.email;
    document.getElementById("pSkills").innerText=data.skills;
    document.getElementById("pBio").innerText=data.bio;
  }
}

window.onload = showData;
</script>

